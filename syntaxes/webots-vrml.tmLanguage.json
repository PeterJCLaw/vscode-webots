{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.webots-vrml",
  "name": "Webots VRML",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#embedded-javascript"
    },
    {
      "include": "#embedded-lua"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.webots-vrml",
      "match": "#.*"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.webots-vrml",
          "match": "\\b(DEF|USE|EXTERNPROTO|PROTO|IS|FALSE|TRUE|NULL)\\b"
        }
      ]
    },
    "names": {
      "patterns": [
        {
          "name": "variable.webots-vrml",
          "match": "\\b[\\w-_]+\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.webots-vrml",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.webots-vrml",
          "match": "\\\\."
        },
        {
          "include": "#embedded-javascript"
        },
        {
          "include": "#embedded-lua"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.webots-vrml",
      "match": "-?\\d+(\\.\\d+)?"
    },
    "embedded-javascript": {
      "begin": "%<=?",
      "beginCaptures": {
        "0": { "name": "storage.type" }
      },
      "end": ">%",
      "endCaptures": {
        "0": { "name": "storage.type" }
      },
      "name": "meta.embedded.block.javascript",
      "patterns": [{ "include": "source.js" }]
    },
    "embedded-lua": {
      "begin": "%{=?",
      "beginCaptures": {
        "0": { "name": "storage.type" }
      },
      "end": "}%",
      "endCaptures": {
        "0": { "name": "storage.type" }
      },
      "name": "meta.embedded.block.lua",
      "patterns": [{ "include": "source.lua" }]
    }
  }
}
